<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Ricerca_nome">

    <TextView
        android:id="@+id/testo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ricerca il tuo locale:"
        android:textAlignment="center"
        android:textSize="30dp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="75dp" />

    <EditText
        android:id="@+id/edit"
        android:layout_width="294dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/testo"
        android:layout_alignParentStart="true"
        android:layout_marginTop="68dp"
        android:hint="Scrivi qui il nome del locale"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="150dp" />

    <ImageView
        android:id="@+id/img_search"
        android:layout_width="62dp"
        android:layout_height="57dp"
        android:layout_below="@id/edit"
        android:layout_alignStart="@+id/edit"
        android:layout_marginStart="287dp"
        android:layout_marginTop="-51dp"
        app:srcCompat="@drawable/search_24dp"
        tools:layout_editor_absoluteX="351dp"
        tools:layout_editor_absoluteY="150dp" />

    <CheckBox
        android:id="@+id/enoteche"
        android:layout_width="wrap_content"

        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="42dp"
        android:layout_marginTop="188dp"
        android:textSize="25dp"
        android:text="Enoteche" />

    <CheckBox
        android:id="@+id/discoteche"
        android:layout_width="177dp"

        android:layout_height="35dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="183dp"
        android:layout_marginTop="188dp"
        android:text="Discoteche"
        android:textSize="25dp" />

    <CheckBox
        android:id="@+id/bar"
        android:layout_width="wrap_content"

        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="43dp"
        android:layout_marginTop="240dp"
        android:textSize="25dp"
        android:text="Bar" />

    <CheckBox
        android:id="@+id/pub"
        android:layout_width="wrap_content"

        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="213dp"
        android:layout_marginTop="242dp"
        android:textSize="25dp"
        android:text="Pub" />
</RelativeLayout>