<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RatingBar
        android:id="@+id/ratingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:clickable="false"
        android:numStars="5" />

    <TextView
        android:id="@+id/titolo_recensione"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="70dp"
        android:hint="Titolo recensione"
        android:textStyle="bold"
        android:textSize="20dp"/>


    <TextView
        android:id="@+id/testo_recensione"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/titolo_recensione"
        android:layout_marginStart="0dp"
        android:layout_marginTop="20dp"
        android:hint="testo recensione" />


    <Button
        android:id="@+id/modifica_recensione"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ratingBar"
        android:layout_marginLeft="107dp"
        android:layout_toRightOf="@+id/titolo_recensione"
        android:text="Modifica recensione"
        android:onClick="modificaMyReview"/>
</RelativeLayout>